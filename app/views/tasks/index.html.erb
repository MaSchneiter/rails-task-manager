<div class="container">
  <h2>My tasks</h2>

  <ul class="color-black">
    <% @tasks.each do |task| %>
      if task.completed == true
      <li><i class="far fa-square"></i> <%= link_to task.title, task_path(task) %> <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Delete #{task.title}?" } %></li>
    <% end %>
  </ul>

  <%= link_to "Add a new task", new_task_path %>
</div>

